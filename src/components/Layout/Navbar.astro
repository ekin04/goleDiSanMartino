---
import { siteConfig } from "../../../siteConfig";
import logo from "@img/loghi/orizzontale-piccolo.png";
import { Image } from "astro:assets";
import navbarData from "@content/navbar/navbarHeader.json";
import { Icon } from "astro-icon/components";
const { hidden = false } = Astro.props;
---

<nav
  class={`bg-white fixed w-full z-10 top-0 start-0 shadow-md transition duration-700 ${hidden ? "-translate-y-full" : ""}`}
  id="navbar"
>
  <div
    class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-2 px-3"
  >
    <a href="/" class="flex items-center space-x-2 rtl:space-x-reverse">
      <Image
        src={logo}
        height={80}
        densities={[1, 1.5]}
        alt={`${siteConfig.site.defaultTitle} logo`}
        class="w-[145px] sm:w-[150px]"
      />
    </a>
    <div
      class="flex lg:order-2 items-center space-x-2 sm:gap-4 lg:space-x-0 rtl:space-x-reverse"
    >
      <button
        class="primary-button contactButton bg-emerald-700 hover:bg-emerald-800 px-3 py-3 md:px-4 text-md md:text-xl text-white rounded-full shadow-lg transition-all duration-300 ease-in-out"
        aria-label="Contattaci"
      >
        <span>CONTATTACI</span>
      </button>
      <button
        id="mobileButton"
        type="button"
        class="inline-flex items-center p-1 w-12 h-12 justify-center text-sm rounded-lg lg:hidden hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200"
        aria-controls="navbar-sticky"
        aria-expanded="false"
      >
        <span class="sr-only">Open main menu</span>
        <svg
          class="w-12 h-12 text-stone-900"
          xmlns="http://www.w3.org/2000/svg"
          width="1em"
          height="1em"
          viewBox="0 0 24 24"
          ><path
            fill="none"
            stroke="currentColor"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M7 6h10M4 12h16M7 12h13M7 18h10"></path></svg
        >
      </button>
    </div>
    <div
      class="items-center justify-between hidden w-full lg:flex lg:w-auto lg:order-1"
      id="navbar-sticky"
    >
      <ul
        class="flex gap-2 flex-col p-4 lg:p-0 mt-4 font-medium border border-gray-100 rounded-lg bg-gray-50 lg:space-x-8 rtl:space-x-reverse lg:flex-row lg:mt-0 lg:border-0 lg:bg-white"
      >
        {
          navbarData.items.map((item) => (
            <li>
              <a
                href={item.path}
                class={
                  Astro.url.pathname === item.path
                    ? "flex text-lg items-center justify-center py-2 px-3 text-white bg-emerald-700 rounded lg:bg-transparent lg:text-emerald-700 lg:p-0"
                    : "flex text-lg items-center justify-center py-2 px-3 text-stone-900 rounded hover:bg-emerald-700 hover:text-white transition lg:hover:bg-transparent lg:hover:text-emerald-700 lg:p-0"
                }
                aria-current={Astro.url.pathname === item.path ? "page" : false}
                target={item.externalLink ? "_blank" : "_self"}
              >
                {item.icon && <Icon name={item.icon} class="mr-2 h-6 w-6" />}

                {item.label}
              </a>
            </li>
          ))
        }
        <li class="flex items-center mt-5 lg:hidden mx-auto">
          <a
            href="https://www.facebook.com/maiellaescursioni/"
            target="_blank"
            class=""
            aria-label="Facebook link"
            ><Icon
              name="mdi:facebook"
              class="h-12 w-12 p-1 mx-4 text-stone-900 rounded hover:bg-emerald-700 hover:text-white transition lg:hover:bg-transparent lg:hover:text-emerald-700 lg:p-0"
            /></a
          >
          <a
            href="https://www.instagram.com/maiellaescursioni/"
            target="_blank"
            class=""
            aria-label="Instagram link"
            ><Icon
              name="mdi:instagram"
              class="h-12 w-12 p-1 mx-4 text-stone-900 rounded hover:bg-emerald-700 hover:text-white transition lg:hover:bg-transparent lg:hover:text-emerald-700 lg:p-0"
            /></a
          >
          <a
            href="https://wa.me/393761594011"
            target="_blank"
            class=""
            aria-label="Whatsapp link"
            ><Icon
              name="mdi:whatsapp"
              class="h-12 w-12 p-1 mx-4 text-stone-900 rounded hover:bg-emerald-700 hover:text-white transition lg:hover:bg-transparent lg:hover:text-emerald-700 lg:p-0"
            /></a
          >
          <a
            href="tel:+393761594011"
            target="_blank"
            class=""
            aria-label="Telefono link"
            ><Icon
              name="mdi:phone"
              class="h-12 w-12 p-1 mx-4 text-stone-900 rounded hover:bg-emerald-700 hover:text-white transition lg:hover:bg-transparent lg:hover:text-emerald-700 lg:p-0"
            /></a
          >
        </li>
      </ul>
    </div>
  </div>
</nav>
<script>
  var prevScrollpos = window.scrollY;
  window.onscroll = function () {
    var navbar = document.getElementById("navbar");
    if (navbar) {
      if (window.scrollY > 100) {
        if (window.scrollY > prevScrollpos) {
          navbar.classList.add("-translate-y-full");
        } else {
          navbar.classList.remove("-translate-y-full");
        }
        prevScrollpos = window.scrollY;
      }
    }
  };
</script>
<script>
  import { toggle } from "@assets/js/toggle";
  toggle("#mobileButton", "#navbar-sticky");
  document.addEventListener("astro:page-load", () =>
    toggle("#mobileButton", "#navbar-sticky"),
  );
</script>
